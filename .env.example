# ============================================================================
# GRIVYZOM BACKEND - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in the values

# ============================================================================
# DJANGO SECURITY SETTINGS
# ============================================================================
# CRITICAL: Generate a unique SECRET_KEY for production
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Debug mode (NEVER set to True in production)
DEBUG=False

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,api.grivyzom.com,grivyzom.com,www.grivyzom.com

# Frontend URL for password reset emails and CORS
FRONTEND_URL=https://grivyzom.com

# ============================================================================
# DATABASE CONFIGURATION - Main Database
# ============================================================================
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# ============================================================================
# DATABASE CONFIGURATION - Minecraft Database
# ============================================================================
MINECRAFT_DB_NAME=nLogin
MINECRAFT_DB_USER=your_minecraft_db_user
MINECRAFT_DB_PASSWORD=your_minecraft_db_password
MINECRAFT_DB_HOST=your_minecraft_db_host
MINECRAFT_DB_PORT=3306

# ============================================================================
# MINECRAFT PLUGIN INTEGRATION
# ============================================================================
# API Key for authenticating requests from the Minecraft plugin
# Generate a secure random string (recommended: 64+ characters)
# Example: openssl rand -hex 32
MC_PLUGIN_API_KEY=your_secure_api_key_here

# Pending registration expiry time in minutes (default: 15)
PENDING_REGISTRATION_EXPIRY_MINUTES=15

# ============================================================================
# EMAIL CONFIGURATION (for password reset)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@grivyzom.com
